<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fus.mobile" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.fsu.mobile.util.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.fsu.mobile.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.fsu.mobile.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.BookActivity"
            android:label="@string/title_activity_book"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.QuestionsActivity"
            android:label="@string/title_activity_questions" >
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.ReturnsActivity"
            android:label="@string/title_activity_returns" >
        </activity>
        <activity
            android:name="com.fsu.mobile.activity.BorrowsActivity"
            android:label="@string/title_activity_borrows" >
        </activity>
    </application>

</manifest>
